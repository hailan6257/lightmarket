<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fetch using PSQL, Express and Node.js</title>
</head>
<body>
    <div class="table-data">
<h2>Display Data using Express, Node.js & PSQL</h2>
<% for(let product of products) { %>

  <div><%= product.id %></div>
  <div><%= product.name %></div>
  <div><%= product.sold %></div>

  <form method="post" action='/products/marksold/<%= product.id %>'>
    <button type="send" class="btn btn-outline-primary">Mark as Sold</button>
  </form>

<% } %>



    </table>
    </div>

</body>
</html>
